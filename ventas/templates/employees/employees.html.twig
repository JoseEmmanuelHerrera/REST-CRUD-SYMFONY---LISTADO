{% extends('base.html.twig') %}

{% block title %}

<title>Listado de Employees</title>

{% endblock %}

{% block stylesheets %} {% endblock %}
{% block body %}
<table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Employee Name</th>
                <th>Extension</th>
                <th>Email</th>
                <th>Job Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employees in lista %}
            <tr>
            <td>{{ loop.index }}</td>
            <td>{{ employees.lastname }} {{ employees.firstname }}</td>
            <td>{{ employees.extension }}</td>
            <td>{{ employees.email }}</td>
            <td>{{ employees.jobtitle }}</td>
            <td>
                <button class="btn btn-outline-primary">Update</button>
                <button class="btn btn-outline-danger">Delete</button>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table
{% endblock %}